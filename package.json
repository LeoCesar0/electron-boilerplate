{
  "name": "electron-react-app",
  "version": "1.0.0",
  "description": "Electron React Application",
  "main": "main.js",
  "scripts": {
    "start": "concurrently -k \"cross-env BROWSER=none npm run start:react\" \"npm run start:electron\"",
    "start:react": "vite",
    "start:electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "build:prod": "vite build && cross-env NODE_ENV=production electron .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.4",
    "electron-squirrel-startup": "^1.0.1",
    "vite": "^5.1.6",
    "wait-on": "^7.2.0"
  }
}
